<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog showHeader="false"  >
        <Image height="100%" width="100%" densityAware="true"
         src="{PopupModel>/imagePopupUrl}"
        ></Image>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    text="Close"
                    type="Emphasized"
                    press="OnCloseImagePopup" />
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>

