<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog showHeader="false">
        <f:SimpleForm
            editable="false"
            layout="ResponsiveGridLayout"
            title="User Information"
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="4"
            emptySpanL="4"
            emptySpanM="4"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false">
            <f:content>
                <Label text="First Name" />
                <Text
                    id="nameText"
                    text="{userModel>/FirstName}"/>
                <Label text="Last Name" />
                <Text text="Street HouseNumber" />
                <Label text="Email" />
                <Text text="ZIPCode City" />
                <!--  <Label text="Country" />
				<Text id="countryText" text="{Country}" />  -->
            </f:content>
        </f:SimpleForm>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    text="Cancel"
                    type="Reject"
                    press="OnCloseAbout" />
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
